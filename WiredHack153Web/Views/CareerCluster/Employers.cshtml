</script>

<div id="Content">
    <div id="ContentHeader">
        <span class="Bold">Employers</span>
    </div>
    <div id="ClusterWrapper">
        @foreach (var item in Model)
        {
            
                <div class="ClusterPanel">
                    <div class="ClusterInfo FloatLeft">
                            <span class="Padding10 Bold">@item.EmployerName</span><br />
                            <span class="ClusterDescription Padding10">@item.Industry</span><br />
                            <span class="ClusterDescription Padding10">@item.NumOfEmployees</span>
</div>
                    <div class="ChartContentPanel FloatLeft">
                        <span class="ChartHeader FloatLeft Bold">Top 5 Jobs</span>
                        <div class="ChartPanel FloatLeft" id="">

                        </div>
                    </div>
                    <div class="ChartContentPanel FloatLeft">
                        <span class="ChartHeader FloatLeft Bold">Top 5 Schools</span>
                        <div class="ChartPanel FloatLeft" id="">
                        </div>


                        </div>
                    </div>
        }
    </div>




