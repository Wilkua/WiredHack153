@model IEnumerable <WiredHack153Web.Models.EmployerDetails>
@{
    ViewBag.Title = "Employers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #Content {
        position: absolute;
        width: 70%;
        left: 15%;
        border: 1px solid black;
    }

    #ContentHeader {
        padding-top: 15px;
        padding-left: 25px;
    }

    #ClusterWrapper {
        padding: 25px;
        padding-top: 5px;
    }

    .ClusterPanel {
        height: 125px;
        border: 1px solid black;
    }

    .ClusterInfo {
        display: block;
        float: left;
        width: 34%;
    }

    .Padding10 {
        padding: 10px;
    }

    .Bold {
        font-weight: bold;
    }

    .ChartContentPanel {
        display: block;
        width: 33%;
        height: 100%;
    }

    .FloatLeft {
        float: left;
    }

    .ChartPanel {
        position: relative;
        top: 0px;
        right: 0;
        background-color: purple;
        height: 100%;
        width: 55%;
    }
</style>
